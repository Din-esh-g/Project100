@model IEnumerable<Project100.Models.Class.Business>

@{
    ViewData["Title"] = "Index";
}

<h1>Business Accounts</h1>


<h3>@ViewData["ErrorMessage"]</h3>

<body style=" text-align:center">
    <br />
    <div>

        <img src="~/image/logo.png" alt="Revature Bank " height="100" width="200">
    </div>
    <br />
    <br />
    <a class="btn border-success" role="button" asp-action="create">Open New </a> |
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InterestRate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Balance)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.createdAt)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.accountNumber)
                </th>
                <th>Transactions </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InterestRate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Balance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.createdAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.accountNumber)
                </td>

                <td>

                    <a class="btn btn-info" role="button" asp-action="Edit" asp-route-id="@item.accountNumber">Edit</a> |
                    <a class="btn btn-info" role="button" asp-action="Details" asp-route-id="@item.accountNumber">Details</a> |
                    <a class="btn btn-info" role="button" asp-action="Delete" asp-route-id="@item.accountNumber">Delete</a> |


                </td>





            </tr>
            }
        </tbody>
    </table>
    <br />
    <div>

        <img src="~/image/bus.jpeg" alt="Revature Bank " height="150" width="400">
    </div>
</body>
