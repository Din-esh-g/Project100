@model IEnumerable<Project100.Models.Class.Business>

@{
    ViewData["Title"] = "Withdraw";
}


<h1>Withdraw</h1>


<p>@ViewData["ErrorMessage"]</p>


<body style=" text-align:center">

    <div>

        <img src="~/image/logo.png" alt="Revature Bank " height="150" width="200">
    </div>
    <br />

    <form asp-action="Withdraw">
        <label>How much do you want to withdraw?</label>
        <input type="number" name="amount" />
        <input type="hidden" asp-for=@ViewData["Id"] />
        <input type="submit" value="Withdraw" class="btn btn-outline-primary" />
    </form>
    <br />
    <img src="~/image/withdraw.png" alt="Revature Bank " height="250" width="400">

</body>


