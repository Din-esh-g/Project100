
@{
    ViewData["Title"] = "Deposit";
}



<p>@ViewData["ErrorMessage"]</p>



<html>


<body style="text-align:center">

    <h4>Make a Deposit and Secured your future.............</h4>
   
    <div>

        <img src="~/image/logo.png" alt="Revature Bank " height="150" width="200">
    </div>


    <form asp-action="Deposit">


        <label>How much do you want to deposit?</label>
        <input type="number" name="amount" />
        <input type="hidden" asp-for=@ViewData["Id"] />
        <input type="submit" value="Deposit" class="btn btn-success" />
    </form>




</body>
</html>