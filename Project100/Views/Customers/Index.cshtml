@model IEnumerable<Project100.Models.Class.Customers>

@{
    ViewData["Title"] = "Index";
}

<h1> Open /Manage </h1>


<p>
    <a style="widows:initial" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.registerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.firstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.lastName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.registerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.firstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lastName)
            </td>
            <td>
                <a asp-action="Edit"class="btn btn-info" role="button" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" class="btn btn-info" role="button" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" class="btn btn-info" role="button" asp-route-id="@item.Id">Delete</a>

               

            </td>
        </tr>
        }
    </tbody>
</table>
